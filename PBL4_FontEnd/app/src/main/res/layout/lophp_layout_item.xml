<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lophpitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:ignore="Orientation">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/MaLopHP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/border"

            android:gravity="center"
            android:text="Ma Lop HP"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:orientation="vertical">


            <TextView

                android:id="@+id/TenLopHP"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="0"
                android:background="@drawable/border"
                android:text="Ten Lop HP"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/SoLuong"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="0"
                android:background="@drawable/border"
                android:text="So Luong"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/XemListSV"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:text="Xem DS lớp" />

                <Button
                    android:id="@+id/LHP_SuaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sửa Lop"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/LHP_XoaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:text="Xóa Lop"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>









</LinearLayout>